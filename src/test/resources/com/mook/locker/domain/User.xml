<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mook.locker.mapper.UserMapper">
    <select id="getUser" parameterType="int" resultType="com.mook.locker.domain.User">
             select * from `user` where id=#{id}
    </select>
    <update id="updateUser" parameterType="com.mook.locker.domain.User">update `user`
        <set>
            <if test="name!=null">name = #{name},</if>
            <if test="password!=null">password = #{password},</if>
        </set>
        where id = #{id}
    </update>
</mapper>